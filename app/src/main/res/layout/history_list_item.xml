<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="10dp">

    <ImageView
        android:id="@+id/history_icon_tv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/history_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="110dp"
                android:text="ugrad-advisor asd asdf  asdf asdf "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_time_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/history_name_tv"
                android:text="Jun 17 12:30 PM"
                android:gravity="end"
                android:textSize="12sp"
                android:textStyle="italic"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/history_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[CSE UGRAD] New update on the class registration systems! Please make sure that your schedules are all correct."
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>